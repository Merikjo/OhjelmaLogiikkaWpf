<Window x:Class="OhjelmaLogiikkaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OhjelmaLogiikkaWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnViikonpaiva" Content="Viikonpäivä" HorizontalAlignment="Left" Height="91" Margin="51,49,0,0" VerticalAlignment="Top" Width="246" Click="btnViikonpaiva_Click"/>
        <Button x:Name="btnVertailu" Content="Ovat samoja?" HorizontalAlignment="Left" Height="91" Margin="352,49,0,0" VerticalAlignment="Top" Width="274" Click="btnVertailu_Click"/>
        <Button x:Name="btnVertaile" Content="Vertaile luku ja merkkijono" HorizontalAlignment="Left" Height="86" Margin="51,173,0,0" VerticalAlignment="Top" Width="246" Click="btnVertaile_Click"/>
        <Button x:Name="btnLoop" Content="Silmukka" HorizontalAlignment="Left" Height="86" Margin="352,173,0,0" VerticalAlignment="Top" Width="274" Click="btnLoop_Click"/>
        <Button x:Name="btnLuku" Content="Luku + 1" HorizontalAlignment="Left" Height="87" Margin="51,298,0,0" VerticalAlignment="Top" Width="246" Click="btnLuku_Click"/>
        <TextBox x:Name="txtLuku" HorizontalAlignment="Left" Height="87" Margin="352,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274"/>

    </Grid>
</Window>
